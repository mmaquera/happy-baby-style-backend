{
  "name": "happy-baby-style-admin-backend",
  "version": "1.0.0",
  "description": "Backend API for Happy Baby Style Admin Panel",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "dev:development": "NODE_ENV=development node scripts/dev-server.js",
    "dev:production": "NODE_ENV=production node scripts/dev-server.js",
    "start": "TS_NODE_PROJECT=tsconfig.production.json node -r tsconfig-paths/register dist/src/index.js",
    "start:development": "NODE_ENV=development TS_NODE_PROJECT=tsconfig.production.json node -r tsconfig-paths/register dist/src/index.js",
    "start:production": "NODE_ENV=production TS_NODE_PROJECT=tsconfig.production.json node -r tsconfig-paths/register dist/src/index.js",
    "build": "rm -rf dist && tsc",
    "build:development": "rm -rf dist && NODE_ENV=development tsc",
    "build:production": "rm -rf dist && NODE_ENV=production tsc",
    "type-check": "tsc --noEmit",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "docs": "node docs/serve-docs.js",
    "docs:open": "open http://localhost:8080",
    "prisma:generate": "prisma generate",
    "prisma:db:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:status": "prisma migrate status",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:migrate:create": "prisma migrate dev --create-only",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "test:db": "node scripts/test-prisma-connection.js",
    "test:graphql": "node scripts/test-graphql.js",
    "test:graphql:complete": "node scripts/test-graphql-complete.js",
    "test:logging": "ts-node -r tsconfig-paths/register scripts/test-logging.js",
    "explore:graphql": "node scripts/start-graphql-explorer.js",
    "graphql:playground": "echo 'GraphQL Playground: http://localhost:3001/graphql' && open http://localhost:3001/graphql",
    "env:info": "node scripts/show-environment-info.js",
    "env:validate": "node scripts/validate-environment.js",
    "db:backup": "node scripts/migration-utils.js backup",
    "db:backup:production": "NODE_ENV=production node scripts/migration-utils.js backup production",
    "db:restore": "node scripts/migration-utils.js restore",
    "db:verify": "node scripts/migration-utils.js verify",
    "db:verify:production": "NODE_ENV=production node scripts/migration-utils.js verify",
    "db:migrate:safe": "node scripts/migration-utils.js migrate",
    "db:list": "node scripts/migration-utils.js list",
    "db:clean": "node scripts/migration-utils.js clean",
    "migration:dev": "npm run prisma:migrate",
    "migration:deploy": "npm run prisma:migrate:deploy",
    "migration:status": "npm run prisma:migrate:status",
    "migration:create": "npm run prisma:migrate:create",
    "seed:test": "node scripts/seed-test-data.js"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "@apollo/server": "^4.11.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-transport": "^2.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/winston": "^2.4.4",
    "jest": "^29.7.0",
    "prisma": "^6.13.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}
